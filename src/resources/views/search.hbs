<div class="mt-4">
  <form method="post">
    <div class="mb-3">
      <label for="search-input" class="form-label">Keyword : </label>
      <input name="q" class="form-control" id="search-input" />
    </div>
    <div class="mb-3">
      <label for="gender-input" class="form-label">Gender : </label>
      <select name="gender" id="gender-input" class="form-control">
        <option value=""> -- Select gender --</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
  </form>
</div>